<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearTabuada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="br.com.douglimar.tabuada.TabuadaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTabuadaTitle"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="1"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="4"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="8"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:textSize="18sp"
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnTen"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEleven"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="11"
            android:textStyle="bold" />

        <Button
            android:textSize="18sp"
            android:id="@+id/btnTwelve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btnThirteen"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="13"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnFourteen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="14"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFifteen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSixteen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="16"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="17"
            android:textStyle="bold"
            android:id="@+id/btnSeventeen"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="18"
            android:textStyle="bold"
            android:id="@+id/btnEighteen"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="19"
            android:textStyle="bold"
            android:id="@+id/btnNineteen"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/btnTwenty"
            />


    </LinearLayout>



</LinearLayout>
